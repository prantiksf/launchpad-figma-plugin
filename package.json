{
  "name": "figma-plugin-boilerplate",
  "version": "1.14.0",
  "description": "Figma plugin boilerplate with custom design system and Storybook",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "ts-node scripts/build.ts --mode=development --watch",
    "build": "ts-node scripts/build.ts --mode=production",
    "preview": "npm run build && node preview-server.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@figma/plugin-typings": "^1.88.0",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/blocks": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@storybook/test": "^8.5.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "esbuild": "^0.24.0",
    "prettier": "^3.3.3",
    "storybook": "^8.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^6.0.3"
  },
  "dependencies": {
    "@salesforce-ux/design-system": "^2.28.1",
    "@salesforce-ux/sds-metadata": "^1.2.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
