# Copy this file to .env and fill in your values

# PostgreSQL connection string
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://localhost:5432/starter_kit

# Server port (Heroku sets this automatically)
PORT=3000

# API key (optional) - if set, all /api/* and /admin/* requests must include X-API-Key header
# Leave empty for local dev without auth
# API_KEY=your-secret-key

# Environment
NODE_ENV=development
